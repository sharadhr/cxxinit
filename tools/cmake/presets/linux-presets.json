{
  "version": 9,
  "include": [
    "base-presets.json"
  ],
  "configurePresets": [
    {
      "name": "linux-base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;ASan"
      },
      "inherits": [
        "project-config"
      ]
    },
    {
      "name": "linux-clang",
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/toolchains/clang-linux.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "inherits": [
        "linux-base"
      ]
    }
  ]
}
