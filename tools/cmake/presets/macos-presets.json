{
  "version": 6,
  "include": [
    "base-presets.json"
  ],
  "configurePresets": [
    {
      "name": "macos-base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/toolchains/clang-macos.cmake"
      },
      "inherits": [
        "project-config"
      ]
    },
    {
      "name": "macos-arm64",
      "hidden": true,
      "inherits": [
        "macos-base"
      ],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "VCPKG_TARGET_TRIPLET": "arm64-macos"
      }
    },
    {
      "name": "macos-x64",
      "hidden": true,
      "inherits": [
        "macos-base"
      ],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64",
        "VCPKG_TARGET_TRIPLET": "x64-macos"
      }
    }
  ]
}
