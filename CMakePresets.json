{
  "version": 9,
  "include": [
    "${sourceDir}/tools/cmake/presets/linux-presets.json",
    "${sourceDir}/tools/cmake/presets/macos-presets.json",
    "${sourceDir}/tools/cmake/presets/windows-presets.json"
  ],
  "configurePresets": [
    {
      "name": "linux",
      "description": "Linux x64",
      "inherits": [
        "linux-clang"
      ]
    },
    {
      "name": "macos-arm64",
      "description": "macOS ARM64",
      "inherits": [
        "macos-arm64"
      ]
    },
    {
      "name": "macos-x64",
      "description": "macOS x64",
      "inherits": [
        "macos-x64"
      ]
    },
    {
      "name": "windows-clang-msvc-x64",
      "description": "Windows x64 with Clang MSVC",
      "inherits": [
        "windows-clang-msvc"
      ]
    },
    {
      "name": "windows-cl-msvc-x64",
      "description": "Windows x64 with MSVC",
      "inherits": [
        "windows-cl-msvc"
      ]
    },
    {
      "name": "windows-clang-mingw-x64",
      "description": "Windows x64 with Clang MinGW",
      "inherits": [
        "windows-clang-mingw",
        "asan"
      ]
    }
  ]
}
